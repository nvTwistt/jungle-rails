<%# copied from carts/show.html.erb %>
<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <div class = "panel panel-default items">
    <table class = "table table-bordered">
      <thread>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thread>
      <tbody>
      <% @line_items.each do |item| %>
        <%= render 'item', product: Product.find(item.product_id), quantity: item[:quantity].to_i %>
      <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.00 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <h3>Your order confirmaton will be sent to <%= @order.email%></h3>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
