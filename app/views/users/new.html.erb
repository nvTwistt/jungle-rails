<section class="signup">

  <header class="page-header">
    <h1>Sign Up</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <%= form_for :user, url: '/users' do |login_form| %>

        <div class="form-group">
          <%= login_form.label :first_name %>
          <%= login_form.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= login_form.label :last_name %>
          <%= login_form.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= login_form.label :email %>
          <%= login_form.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= login_form.label :password %>
          <%= login_form.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= login_form.label :password_confirmation %>
          <%= login_form.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <%= login_form.submit 'Sign Up', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>